
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>VietTravel</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/wwwroot/Client/css/style.css">
    <style type="text/css">
        .details {
            width: 80%;
            margin: 10% auto;
            height: 1000px;
        }

        .label {
            font-weight: bold;
        }

        h1 {
            margin: unset;
        }

        /*#Dattour {
            height: 50px;
        }*/

        #Dattour a {
            background: #8bc34a;
            color: #fff;
            /*border-radius: 4px;
                padding: 3px 5px;*/
            border-radius: 5px;
            height: 50px;
            padding: 10px;
            font-size: 18px;
        }

            #Dattour a:hover {
                cursor: pointer;
                background: #fff;
                color: #8bc34a;
            }

        img {
            width: 100%;
            height: auto;
            vertical-align: top;
            border-radius: 5px;
        }

        .cost-cart {
            display: flex;
            justify-content: space-between;
            padding:0 10%;
        }

        .address {
            padding-bottom: 15px;
            padding-left:10%;
            font-size: 18px;
            text-align: left;
        }
    </style>
</head>
<body>

    <div class="details">
        <h2>Thông tin chi tiết Tour</h2>
        <br />
        <table border="0" style="width:100%; height: 80vh;">
            <tr>
                <td colspan="2"><h1>@Model.TourName</h1></td>
            </tr>
            <tr>
                <td style="width:55%; height: 100%;">
                    <img src="~/wwwroot/images/imgTour/@Model.Images" />
                </td>
                <td>
                    <div class="address">
                        <span class="label">Vị trí:</span> @Model.Addresss
                    </div>
                    <div class="address">
                        <span class="label">Tình trạng tour:</span> @Model.Statuss
                    </div>
                    <div class="cost-cart">
                        <div style="font-size:14pt">
                            <span class="label">Giá tour:</span> <span style="color:red">@String.Format("{0:0,0}", @Model.Cost) VNĐ </span>
                        </div>
                        <div id="Dattour">
                            @if (Model.Statuss == "Còn Tour")
                            {
                                <a href="@Url.Action("AddCart", "Cart", new { @iIDTour = Model.IDTour })">
                                    <i class="fas fa-shopping-cart"></i> Đặt tour
                                </a>
                            }
                            else
                            {
                                <a href="#" onclick="alert('Tour đã hết hạn. Không thể đặt!');">
                                    <i class="fas fa-shopping-cart"></i> Đặt tour
                                </a>
                            }
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <p style="text-align:justify">
                        <span style="font-size:14pt">
                            <span class="label">Mô tả:  </span>@Model.DetailDescription
                        </span>
                    </p> <br />
                </td>
            </tr>
        </table>
    </div>
</body>
</html>

