
@model IEnumerable<Nhom6_TourDuLich.Models.News>
@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<head>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />


    <style>
        .cover {
            display: flex;
            justify-content: space-around;
        }

        .left {
            width: 40%;
        }

            .left img {
                max-width: 100%;
                border-radius: 20px;
            }

        .right {
            width: 60%;
            margin-left: 40px;
        }

        .title {
            font-weight: bold;
        }

        hr {
            border-top: 1px solid #222831;
        }
    </style>
</head>


<div class="hero-wrap js-fullheight" style="background-image: url('../../wwwroot/images/bg_4.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-9 ftco-animate text-center" data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="@Url.Action("Index", "VietTravel")">Trang chủ</a></span> <span>Tin tức</span></p>
                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Tin tức</h1>
            </div>
        </div>
    </div>
</div>


<section class="ftco-section ftco-degree-bg">
    <div class="container">
        @foreach (var news in Model)
        {
            <div class="cover">
                <div class="left">
                    <img src="~/wwwroot/images/imgNew/@news.Images" alt="~/wwwroot/images/imgNew/@news.Title" />
                </div>
                <div class="right">
                    <div class="row">
                        <div class="destination">

                            <div>
                                <div>
                                    <h3 class="title"><a href="#">@news.Title</a></h3>
                                </div>
                                <p>@news.Descriptions</p>
                            </div>
                        </div>
                    </div>
                </div> <!-- .col-md-8 -->
            </div>
            <br /> <hr /> <br />
        }
    </div>
    </div>
</section> <!-- .section -->
