@{
    ViewBag.Title = "AcceptOrder";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>VietTravel</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/wwwroot/Client/css/style.css">
    <style type="text/css">
        .accept {
            margin: 80px 10% 0px 10%;
            min-height: 500px;
        }

        .btn-back a {
            background: #8bc34a;
            color: #FFF;
            border-radius: 5px;
            height: 35px;
            padding: 5px;
            font-size: 16px;
            font-family: Helvetica !important;
            /*font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif !important;*/
        }

            .btn-back a:hover {
                background: #FFF;
                color: #8bc34a;
            }
    </style>
</head>
<body>
    <div class="accept">
        <h3>Quý khách đã đặt tour thành công. Chúng tôi sẽ liên hệ với quý khách trong thời gian sớm nhất có thể</h3>
        <div class="btn-back">
            <a href="@Url.Action("Index", "VietTravel")"><i class="fas fa-angle-double-left"></i>Về trang chủ</a>
        </div>
    </div>
</body>
</html>

